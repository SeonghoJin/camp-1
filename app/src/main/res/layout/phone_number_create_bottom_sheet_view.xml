<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomSheetDashBoardLayout"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    app:behavior_hideable="true"
    app:behavior_draggable="true"
    android:orientation="vertical"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:weightSum="20"
    android:background="@color/iphone_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginTop="10dp"
        >
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/iphone_links"
            android:text="취소"
            android:background="@color/transparent"
            android:id="@+id/cancel_action"
            >
        </Button>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:text="새로운 연락처"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="3"
            >
        </TextView>
        <Button
            android:textColor="@color/iphone_links"
            android:text="완료"
            android:background="@color/transparent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/complete_action"
            >
        </Button>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="@drawable/profile_wrapper"
        >
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/profile_background"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/default_profile_image"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile_default_image"
                android:visibility="invisible"
                >
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="뷁"
                android:textSize="75dp"
                android:textAlignment="center"
                android:gravity="center"
                android:id="@+id/default_profile_word"
                >
            </TextView>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:hint="성"
            android:backgroundTint="@color/iphone_lines"
            android:maxLines="1"
            android:inputType="text"
            android:id="@+id/input_first_name"
            >
        </EditText>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:hint="이름"
            android:backgroundTint="@color/iphone_lines"
            android:maxLines="1"
            android:inputType="text"
            android:id="@+id/input_last_name"
            >
        </EditText>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:hint="전화번호"
            android:backgroundTint="@color/iphone_lines"
            android:inputType="phone"
            android:maxLines="1"
            android:id="@+id/input_phone_number"
            >
        </EditText>
    </LinearLayout>
</LinearLayout>